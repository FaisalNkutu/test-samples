import org.json.JSONArray;
import org.json.JSONObject;

import java.io.BufferedReader;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.nio.charset.StandardCharsets;

public class JsonFromResourceExample {

    public static void main(String[] args) {
        // Load the JSON file from the resources folder
        ClassLoader classLoader = JsonFromResourceExample.class.getClassLoader();
        try (InputStream inputStream = classLoader.getResourceAsStream("data.json")) {
            
            if (inputStream == null) {
                System.out.println("File not found in resources");
                return;
            }
            
            // Convert InputStream to String
            StringBuilder contentBuilder = new StringBuilder();
            try (BufferedReader br = new BufferedReader(new InputStreamReader(inputStream, StandardCharsets.UTF_8))) {
                String line;
                while ((line = br.readLine()) != null) {
                    contentBuilder.append(line);
                }
            }

            // Convert string content to JSON Object
            String jsonData = contentBuilder.toString();
            JSONObject jsonObject = new JSONObject(jsonData);

            // You can now work with the JSON object
            System.out.println(jsonObject.toString(4)); // Pretty-print the JSON

            // Accessing fields (example: parameters array)
            JSONArray parameters = jsonObject.getJSONArray("parameters");
            for (int i = 0; i < parameters.length(); i++) {
                JSONObject param = parameters.getJSONObject(i);
                System.out.println("Name: " + param.getString("name"));
                System.out.println("Direction: " + param.getString("direction"));
                // Access other fields if needed
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
